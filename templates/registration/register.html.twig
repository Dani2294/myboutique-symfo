{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container col-md-6 my-5">
    <h1>Sign Up</h1>

    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-6">{{ form_row(registrationForm.name) }}</div>
            <div class="col-md-6">{{ form_row(registrationForm.first_name) }}</div>
        </div>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="row">
            <div class="col-md-8">{{ form_row(registrationForm.adress) }}</div>
            <div class="col-md-4">{{ form_row(registrationForm.postal_code) }}</div>
        </div>
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
    {{ form_end(registrationForm) }}
    <p class="mt-3">Already have an account? <a href="{{ path('app_login') }}">Log in now</a>.</p>
</div>
{% endblock %}
