{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<section class="col-lg-8 mx-auto m-1 py-3 px-2">
    <a href="{{ path('app_category_index') }}" class="btn btn-dark"><i class="fa-solid fa-arrow-left"></i> back to category list</a>
    <h1 class="py-3" >{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-grid d-sm-block">
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary mb-2">Edit</a>
    </div>

    {{ include('category/_delete_form.html.twig') }}
</section>
{% endblock %}
