{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<section class="col-lg-8 mx-auto m-1 py-3 px-2">
    <a href="{{ path('app_product_index') }}" class="btn btn-dark"><i class="fa-solid fa-arrow-left"></i> back to products list</a>
    <h1 class="py-3" >{{ product.name }}</h1>

    <img src="{{ asset('photos/' ~ product.image) }}" alt="" style="width: 60%;">

    <table class="table mt-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ product.marque }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ product.ref }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prix }}â‚¬</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-grid d-sm-block gap-2">
        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary mb-sm-2">Edit</a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
