{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<section class="col-lg-9 mx-auto m-1 py-5 px-3">
    <div class="row">
        <div class="col-md-6">
            <figure>
                <img src="{{ asset('photos/' ~ product.image) }}" class="card-img-home" style="width: 100%; object-fit: cover;"/>
                <figcaption><small>Product ref: {{product.ref}}</small></figcaption>
            </figure>
        </div>
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p>{{ product.marque }}</p>
            <p><span class='fw-bold'>Description:</span> <br>{{ product.description }}</p>
            <p><span class='fw-bold'>Prix:</span> <br>{{ product.prix }}â‚¬</p>
            <a href="{{ path('app_add_to_cart', {'id': product.id}) }}" class='btn btn-lg btn-success'>Add to cart</a>
        </div>
    </div>
</section>
{% endblock %}
